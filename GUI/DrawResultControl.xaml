<UserControl x:Class="GUI.DrawResultControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             >
    <Canvas Background="Transparent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="100">
        <Path Fill="Transparent" Data="{Binding LinearData}" Stroke="Red" StrokeThickness="2"  HorizontalAlignment="Left" VerticalAlignment="Top">
        </Path>
        <Path Fill="Transparent" Data="{Binding NonLinearData}" Stroke="Green" StrokeThickness="2" HorizontalAlignment="Left" VerticalAlignment="Top">
        </Path>
        <Path Fill="Transparent" Stroke="Black" StrokeDashArray="5 5" Data="{Binding AxesData}" HorizontalAlignment="Left" VerticalAlignment="Top"/>
    </Canvas>
</UserControl>
